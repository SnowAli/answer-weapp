@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";
.page-item{
  display: flex;
  flex-direction: column
}
.timer-box {

  width: 100%;
  height: 100rpx;
  text-align: center;
}
.timer-box .timer {
  line-height: 110rpx;
}
.timer-box .timer-image {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  left: 50%;
  transform: translateX(-50%);
}



.question-box {
  margin-bottom: 30rpx;
  letter-spacing: 2px;
}
.count-box{
  margin-right: 20rpx;
}
.text-current-count{
  font-size: 35rpx;
  color: red;
  font-weight: bold;

}
.text-total-count{
  font-size: 30rpx;
  color:#999999;
  font-weight: bold;
}

.content{
  font-size: 80rpx;
  align-self: center;
  margin-top: 80rpx
}

.page-item {
  padding: 20rpx 40rpx;
}


.img{
  width: 690rpx;
  margin: 80rpx 0rpx 0rpx 30rpx;
  border-radius: 10rpx;
}

.result-box {
  margin-top: 40rpx;
  text-align: center;
}