          </text>
        </view>
      </view>
      <view class="action">
        <view class="text-grey text-xs">分数：{{item.totalCredit}}</view>
        <view class="cu-tag round bg-grey sm">耗时：{{item.totalTime}}</view>
      </view>
    </view>
